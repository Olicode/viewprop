<div class="container">
  <h1>Chat with <%= @conversation.other_user(current_user).first_name %></h1>
  <div id="messages" data-conversation-id="<%= @conversation.id %>">
    <% @conversation.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [ @conversation, @message ], remote: true do |f| %>
    <%= f.input :content, label: false %>
    <%= f.submit %>
  <% end %>
</div>
