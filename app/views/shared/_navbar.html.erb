<div class="navbar navbar-light navbar-expand-sm">

  <div class="navbar-brand">
    <%= link_to "VIEWPROP", root_path %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>
    <div class="collapse navbar-collapse nav-lin" id="navbarSupportedContent">
      <div class="nav-section-1">
        <li class="nav-item">
          <%= link_to "About us", root_path(@home, :anchor => 'about_us'), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Benefits", root_path(@home, :anchor => 'benefits'), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "See all listings", listings_path, class: "nav-link" %>
        </li>
      </div>
    </div>
    <div class="nav-section-2">
      <li class="nav-item dropdown">

        <% if !current_user.avatar.attached? %>
          <%= image_tag 'blank_avatar.png', class:"avatar dropdown-toggle", id:"navbarDropdown", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } %>
        <% else %>
          <%= cl_image_tag current_user.avatar.key, class:"avatar dropdown-toggle", id:"navbarDropdown", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit profile", edit_user_registration_path, class:"dropdown-item" %>
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "History", history_path, class: "dropdown-item" %>
          <%= link_to "Inbox", conversations_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </div>
  <% else %>
    <div class="collapse navbar-collapse nav-lout" id="navbarSupportedContent">
      <div class="nav-section-1">
        <li class="nav-item">
          <%= link_to "About us", root_path(@home, :anchor => 'about_us'), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Benefits", root_path(@home, :anchor => 'benefits'), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "See all listings", listings_path, class: "nav-link" %>
        </li>
      </div>
    </div>
    <div class="collapse navbar-collapse nav-lout" id="navbarSupportedContent">
      <div class="nav-section-2">
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link dark" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link dark" %>
        </li>
      </div>
    </div>
  <% end %>

</div>
